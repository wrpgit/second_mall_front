/* pages/home/home.wxss */

.navbar{  
  position: relative;
  top:120rpx;
  flex: none;  
  display: flex;  
  /* background: rgb(248,89,89); */
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
  font-size:14px;
}  
/* 顶部导航字体颜色 */
.navbar .item.active{  
  color: rgb(1,171,253);  
}  
/* 顶部指示条属性 */
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 10rpx;  
  background: rgb(1,171,253);  
} 

.section{
  background-color: #d0d0d0;
  position: relative;
  top:100rpx;
}


.list{
  position: relative;
  margin-top: 20rpx;
  width: 100%;
  height: 310rpx;
  /* background-color: #eee; */
  top: 30rpx;
}
.img{
  float:left;
  margin: 10rpx;
  height:130px;
  width: 300rpx;
}
.name{
  position: absolute;
  top:20rpx;
  left: 350rpx;
  float: left;
  width: 330rpx;
  overflow:hidden;   /*超过2行添加省略号*/
  display:-webkit-box;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}

.desc{
  position: absolute;
  width: 330rpx;
  top: 120rpx;
  left: 350rpx;
  float: left;
  overflow:hidden;   /*超过2行添加省略号*/
  display:-webkit-box;
  -webkit-line-clamp:3;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
  font-size: 25rpx;
  color: rgb(43, 33, 33);
}
.money{
  position: absolute;
  bottom: 30rpx;
  left: 330rpx;
  float: left;
  color: rgb(6, 127, 187);
  font-size: 35rpx;
}

.goodsMessage{
  position: absolute;
  top: 180rpx;
}

.over{
  position: relative;
  top: 50rpx;
  margin: 60rpx 0;
  text-align: center;
  color: #d0d0d0;
  left: 200rpx;
}

.line{
  position: relative;
  margin: 0;
  width: 250%;
  height:10rpx; 
  background-color:rgb(242, 244, 247);
}