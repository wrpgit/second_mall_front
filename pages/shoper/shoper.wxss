/* pages/shoper/shoper.wxss */


body{
  margin: 0;
}
.title{
  font-size: 30rpx;
  padding-left: 3rpx;
  color: white;
}
.shoperMessage{
  position: relative;
  height: 100rpx;
  background-color: rgb(6, 127, 187);
  width: 100%;

}
.shoperHeadAddress{
  position: absolute;
  left: 150rpx;
  width: 50rpx;
  height: 50rpx;
  top: 30rpx;
  border-radius: 50%;
}
.shoperName{
  position: absolute;
  font-size: 40rpx;
  left: 250rpx;
  top: 30rpx;
  color: white;
}

.list{
  position: relative;
  margin-top: 20rpx;
  width: 100%;
  height: 310rpx;
  /* background-color: #eee; */
}
.img{
  float:left;
  margin: 10rpx;
  height:130px;
  width: 300rpx;
}
.name{
  position: absolute;
  top:20rpx;
  left: 350rpx;
  float: left;
  width: 330rpx;
  overflow:hidden;   /*超过2行添加省略号*/
  display:-webkit-box;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}

.desc{
  position: absolute;
  width: 330rpx;
  top: 120rpx;
  left: 350rpx;
  float: left;
  overflow:hidden;   /*超过2行添加省略号*/
  display:-webkit-box;
  -webkit-line-clamp:3;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
  font-size: 25rpx;
  color: rgb(43, 33, 33);
}
.price{
  position: absolute;
  bottom: 30rpx;
  left: 330rpx;
  float: left;
  color: rgb(6, 127, 187);
  font-size: 35rpx;
}
.over{
  position: relative;
  top: 50rpx;
  margin: 60rpx 0;
  text-align: center;
  color: #d0d0d0;
}
.line{
  position: relative;
  margin: 0;
  width: 100%;
  height:10rpx; 
  background-color:rgb(242, 244, 247);
}