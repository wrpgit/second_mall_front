/* pages/goodsDetail/goodDetail.wxss */

.shoperMessage{
  position: relative;
  height: 100rpx;
  background-color: rgb(6, 127, 187);
  width: 100%;
}
.title{
  font-size: 30rpx;
  color: white;
}
.shoperHeadAddress{
  position: absolute;
  left: 20%rpx;
  width: 50rpx;
  height: 50rpx;
  top: 30rpx;
  border-radius: 50%;
}
.shoperName{
  position: absolute;
  font-size: 40rpx;
  left: 33%;
  top: 30rpx;
  color: white;
}


.head{
  position: relative;
  width: 100%;
  height: 550rpx;
  background-color: white;
  margin-bottom: 3rpx;
}
.img{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  height: 500rpx;
  width: 500rpx;
}
.name{
  position: relative;
  top: 30rpx;
  width: 100%;
  height: auto;
  max-height: 150rpx;
  min-height: 100rpx;
  margin-bottom: 50rpx;
  background-color: white;
  padding: 2rpx 10rpx;
}
.goodsAddTime{
  position: relative;
  margin: 3rpx;
  padding-left: 20rpx;
  top: 10rpx;
  color: rgb(185, 181, 181);
}
.price{
  color: rgb(6, 127, 187);
  position: relative;
  top: 20rpx;
  font-size: 40rpx;
  left: 500rpx;
}
.desc{
  position: relative;
  top: 30rpx;
  width: 98%;
  padding: 5rpx 10rpx;
  margin-bottom: 30rpx;
  background-color: white;
  height: 230rpx; 
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;  
}

.school{
  position: relative;
  height: 70rpx;
  width: 98%;
  padding: 5rpx 10rpx;
  background-color: white;
}

.bottom{
  position: relative;
  top: 60rpx;
  height: 130rpx;
}
.btn{
  position: absolute;
  top: 30rpx;
  width: 49%;
  background-color: rgb(5, 134, 199);
  color: white;
  height: 80rpx;
  font-size: 35rpx
}

.makeOrder{
  left: 4rpx;
}
.contect{
  right: 4rpx;
  background-color:  rgb(248,89,89);
}
.change{
  left:4rpx;
}
.cancel{
  right: 4rpx;
  background-color: rgb(248,89,89);
}

.line{
  position: relative;
  margin: 0;
  width: 100%;
  height:10rpx; 
  background-color:rgb(242, 244, 247);
}