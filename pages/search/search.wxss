/* pages/search/search.wxss */

.page_row{
  position: fixed;
  top:0rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  z-index: 2;
}

.search{
  width: 100%;
}
.searchicon{
  position: absolute;
  left: 65rpx;  
  top:27rpx;
  z-index: 2;
  text-align: center;
}
.input{
  position: relative;
  top: 15rpx;
  width: 60%;
  height: 70rpx;
  margin-left: 20px;
  border-radius: 10rpx;
  border-style: solid;
  border-color: #d0d0d0;
  border-width: 2rpx;
  padding-left: 65rpx;
}
.sousuo{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  margin-left: 15rpx;  
  width: 20%;  
  height: 60rpx;
  line-height: 150%;  
  text-align: center;  
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
}

.list{
  position: relative;
  top: 0rpx;
  left: 1rpx;
  width: 100%;
  height: 310rpx;
  /* background-color: #eee; */
  margin-bottom: 10rpx;

}
.img{
  position: absolute;
  float:left;
  margin: 10rpx;
  height:130px;
  width: 300rpx;
}
.name{
  position: absolute;
  top:20rpx;
  left: 350rpx;
  float: left;
  width: 330rpx;
  overflow:hidden;   /*超过2行添加省略号*/
  display:-webkit-box;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}

.desc{
  position: absolute;
  width: 330rpx;
  top: 120rpx;
  left: 350rpx;
  float: left;
  overflow:hidden;   /*超过2行添加省略号*/
  display:-webkit-box;
  -webkit-line-clamp:3;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
  font-size: 25rpx;
  color: rgb(43, 33, 33);
}
.price{
  position: absolute;
  bottom: 20rpx;
  right: 100rpx;
  float: left;
  color: rgb(6, 127, 187);
  font-size: 35rpx;

}

.goodsMessage{
  position: absolute;
  top: 200rpx;
}

.isFind{
  position: relative;
  padding: 20rpx;
  top: -30rpx;
  width: 80%;
}

.bodyer{
  position: absolute;
  top: 120rpx;
  width: 100%;
}
.over{
  position: relative;
  top: 50rpx;
  margin: 60rpx 0;
  text-align: center;
  color: #d0d0d0;
}

.line{
  position: relative;
  margin: 0;
  width: 100%;
  height:10rpx; 
  background-color:rgb(242, 244, 247);
}