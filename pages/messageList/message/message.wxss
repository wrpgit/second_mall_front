#all{
  margin: 0;
  max-width: 100%;
  max-height: 100%;
  background-color: #eee;
  overflow: hidden;
}
#header{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100rpx;
  background-color:rgb(1,171,253);
  z-index: 3;
  
}
.friendName{
  position: absolute;
  line-height: 100rpx;
  font-size: 40rpx;
  left: 270rpx;
}
.friendHead{
 position: absolute;
  width: 70rpx;
  height: 70rpx;
  top: 10rpx;
  left: 180rpx;
  border-radius: 50%;
}
#body{
  position: relative;
  top: 100rpx;
  margin: 0;
  background-color: #eee;
  margin-bottom: 250rpx;
  min-height: 950rpx;
  width: 100%;
}
.time{
  position: relative;
  top: 20rpx;
  color: rgb(162,165,172);
  left: 200rpx;
  display: block;
}
.message{
  position: relative;
  margin-top: 20rpx;
}
.head{
  position: absolute;
  top: 10rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #eee;
  border-radius: 50%;
  display: inline-block;
}
.otherHead{
  left: 20rpx;
}
.meHead{
  right: 20rpx; 
}
.word{
  position: relative;
  top: 10rpx;
  width: auto;
  max-width: 300rpx;
  padding: 10rpx;
  background-color: white;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  word-break:break-all;
  word-wrap:break-word;
}
.otherWord{
  left: 120rpx;
}
.meWord{
  left: 320rpx;
}
#writeArea{
  position: fixed;
  bottom: 12rpx;
  height: 70rpx;
  width: 100%;
  z-index: 3;
}
.writeWord{
  position: absolute;
  bottom: 0;
  width:79%;
  background-color:white;
  height: 80rpx;
  border-radius:10rpx;
  /* display: inline-block; */
  margin-left: 10rpx;
  font-size: 50rpx;
  padding: 10rpx;
}
#sendMessage{
  position: absolute;
  right: 10rpx;
  margin-left: 5rpx;
  width: 120rpx;
  height: 75rpx;
  display: inline-block;
  font-size: 50rpx;
  background-color: rgb(0,201,250);
  padding: 2rpx;
  line-height: 65rpx;
}