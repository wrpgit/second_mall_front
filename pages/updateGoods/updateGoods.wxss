}
input{
  width:100%;
  height: 100rpx;
  font-size: 35rpx;
  margin: 3rpx 0;
}
.line{
  position: relative;
  margin: 0;
  width: 100%;
  height:10rpx; 
  background-color:rgb(242, 244, 247);
}
.line_css{
