body{
  margin: 0;
}

.head{
  width:100%;
  height: 300rpx;
  background:#fff;
}
.boxImage{
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  width:auto;
} 
.creama{
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  float: left;
  top: 60rpx;
  width: 250rpx;
  height: 200rpx;
}
.remove{
  position: absolute;
  top: 270rpx;
  left: 43%;
  width: 70rpx;
  height: 70rpx;

}
.text1{
  position: absolute;
  top:300rpx;
