/* pages/aboutMe/orderDetail/orderDetail.wxss */
.orderMessage{
  position: relative;
  height: 100rpx;
  background-color: rgb(6, 127, 187);
  width: 100%;

}
.title{
  font-size: 30rpx;
  color: white;
}
.costumHeadImg{
  position: absolute;
  left: 20%rpx;
  width: 50rpx;
  height: 50rpx;
  top: 30rpx;
  border-radius: 50%;
}
.custumName{
  position: absolute;
  font-size: 40rpx;
  left: 33%;
  top: 30rpx;
  color: white;
}
.head{
  position: relative;
  width: 100%;
  height: 550rpx;
  /* background-color: #eee; */
  margin-bottom: 3rpx;
}
.img{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  height: 500rpx;
  width: 500rpx;
}
.name{
  position: relative;
  top: 30rpx;
  width: 100%;
  height: auto;
  max-height: 150rpx;
  min-height: 100rpx;
  margin-bottom: 50rpx;
  /* background-color: rgb(232, 232, 241); */
  padding: 2rpx 10rpx;
}
.price{
  color:  rgb(6, 127, 187);
  position: relative;
  top: 20rpx;
  font-size: 40rpx;
  left: 540rpx;
}
.desc{
  position: relative;
  top: 30rpx;
  width: 98%;
  padding: 5rpx 10rpx;
  margin-bottom: 30rpx;
  /* background-color: rgb(232, 232, 241); */
  height: 230rpx; 
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;  
}
.orderId{
  position: relative;
  margin: 3rpx;
  padding-left: 20rpx;
  top: 10rpx;
   color: rgb(185, 181, 181);
}
.orderTime{
  position: relative;
  top: 10rpx;
  padding-left: 20rpx;
  color: rgb(185, 181, 181);
}
.school{
  position: relative;
  height: 70rpx;
  width: 98%;
  padding: 5rpx 10rpx;
  /* background-color: rgb(232, 232, 241); */
}

.bottom{
  position: relative;
  top: 70rpx;
  width: 100%;
  height: 130rpx;
}

.btn{
  position: relative;
  top: 20rpx;
  float: left;
  background-color: rgb(6, 127, 187);
  color: white;
  height: 80rpx;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}
.three{
  width: 33%;
}
.two{
  width: 49%;
}
.point{
  color: rgba(124, 95, 95, 0.849);
  text-align: center;
  line-height: 90rpx;
  background-color: white;
}

.line{
  position: relative;
  margin: 0;
  width: 100%;
  height:10rpx; 
  background-color:rgb(242, 244, 247);
}